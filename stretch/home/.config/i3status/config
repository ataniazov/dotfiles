wireless _first_ {
        #format_up = "W: (%quality at %essid, %bitrate / %frequency) %ip"
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"

}

ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

