bindsym $mod+Shift+g exec --no-startup-id chromium --incognito		# Chromium
#bindsym $mod+Shift+g exec --no-startup-id chromium --profile-directory="Default" --incognito

# Data cleansing to keep your privacy
bindsym $mod+Shift+x exec --no-startup-id i3-nagbar -t warning -m 'Do you really want to delete your session data?' -b 'Yes delete it!' '~/.config/i3/purify.sh'

# Set default Locker
set $locker $(i3lock -n -d -c 000000 -f)

# Session control shortcut (Shut Down, Restart, Lock, Log Out of your X session)
bindsym $mod+Shift+e exec --no-startup-id i3-nagbar -t warning -m 'You pressed the session exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Lock' '$locker' -b 'Log Out' 'i3-msg exit' -b 'Restart' 'systemctl reboot' -b 'Shut Down' 'systemctl poweroff -i'

