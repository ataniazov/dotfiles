# Configuring i3bar
## Start i3bar to display a workspace bar (plus the system information i3status
## finds out, if available)
bar {
        status_command i3status

        # Display mode
        ## Syntax:
        ## mode dock|hide|invisible
        ## hidden_state hide|show
        ## modifier <Modifier>|none

        # Position
        ## Syntax: position top|bottom
        position top

        # Output(s)
        ## Syntax: output primary|<output>

        # Tray output
        ## Syntax: tray_output none|primary|<output>
        #tray_output primary

        # Tray padding
        ## Syntax: tray_padding <px> [px]

        # Font
        ## Syntax: font <font>
        #font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
        #font pango:DejaVu Sans Mono 10

        # Custom separator symbol
        ## Syntax: separator_symbol <symbol>

        # Workspace buttons
        ## Syntax: workspace_buttons yes|no

        # Strip workspace numbers
        ## Syntax: strip_workspace_numbers yes|no

        # Binding Mode indicator
        ## Syntax: binding_mode_indicator yes|no

        # Colors
        colors {
                ## Syntax: background <color>
                background #000000
                ## Syntax: statusline <color>
                statusline #ffffff
                ## Syntax: separator <color>
                separator #666666

                #focused_background #000000
                #focused_statusline #ffffff
                #focused_separator  #666666

                ## Syntax: <colorclass> <border> <background> <text>
                ## class           border  backgr. text
                focused_workspace  #4c7899 #285577 #ffffff
                active_workspace   #333333 #5f676a #ffffff
                inactive_workspace #333333 #222222 #888888
                urgent_workspace   #2f343a #900000 #ffffff
                binding_mode       #2f343a #900000 #ffffff
        }

        # Take a screenshot by middle clicking on the bar
        #bindsym button2 exec --no-startup-id xfce4-screenshooter -w -s $HOME/Pictures/		# window
} 

## Toggle between dock mode and hide mode
bindsym $mod+m bar mode toggle

## Enter global fullscreen mode
bindsym $mod+Shift+f fullscreen toggle global

## The middle button with modifier toggles floating
bindsym --whole-window $mod+button2 floating toggle

## Sticky floating windows
## Syntax: sticky enable|disable|toggle
bindsym --release $mod+Shift+button2 sticky toggle

## Set alternative modifier
set $altmod Mod1
## Move the current workspace to the next output
bindsym $mod+$altmod+$left move workspace to left
bindsym $mod+$altmod+$down move workspace to down
bindsym $mod+$altmod+$up move workspace to up
bindsym $mod+$altmod+$right move workspace to right
## alternatively, you can use the cursor keys:
bindsym $mod+$altmod+Left move workspace to left
bindsym $mod+$altmod+Down move workspace to down
bindsym $mod+$altmod+Up move workspace to up
bindsym $mod+$altmod+Right move workspace to right

